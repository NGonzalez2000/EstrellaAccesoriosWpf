<UserControl
    x:Class="EstrellaAccesoriosWpf.Filters.FiltersView.ProductFilterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fViewModel="clr-namespace:EstrellaAccesoriosWpf.Filters.FiltersViewModels"
    xmlns:local="clr-namespace:EstrellaAccesoriosWpf.Filters.FiltersView"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance fViewModel:ProductFilterViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel MinWidth="250" HorizontalAlignment="Center">
            <TextBlock
                Margin="0,10"
                Text="FILTRAR POR:"
                TextDecorations="Underline" />
            <TextBox
                Margin="0,10"
                materialDesign:HintAssist.Hint="Código"
                CharacterCasing="Upper"
                Text="{Binding ProductCode, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Margin="0,10"
                materialDesign:HintAssist.Hint="Descripción"
                CharacterCasing="Upper"
                Text="{Binding ProductDescription, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox
                Margin="0,10"
                materialDesign:HintAssist.Hint="Categoría"
                materialDesign:TextFieldAssist.HasClearButton="True"
                DisplayMemberPath="Description"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox
                Margin="0,10"
                materialDesign:HintAssist.Hint="Sub Categoría"
                materialDesign:TextFieldAssist.HasClearButton="True"
                DisplayMemberPath="Description"
                ItemsSource="{Binding SubCategories, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SelectedSubCategory, UpdateSourceTrigger=PropertyChanged}" />
            <ComboBox
                Margin="0,10"
                materialDesign:HintAssist.Hint="Proveedor"
                materialDesign:TextFieldAssist.HasClearButton="True"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Providers}"
                SelectedItem="{Binding SelectedProvider, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel
            Grid.Column="1"
            MinWidth="250"
            HorizontalAlignment="Center">
            <TextBlock
                Margin="0,10"
                Text="ORDERNAR POR:"
                TextDecorations="Underline" />
            <ComboBox
                Margin="0,10"
                ItemsSource="{Binding SortOptions}"
                SelectedItem="{Binding SelectedOption}" />
            <ComboBox
                Margin="0,10"
                ItemsSource="{Binding SortDirection}"
                SelectedItem="{Binding SelectedDirection}" />
        </StackPanel>
    </Grid>
</UserControl>
