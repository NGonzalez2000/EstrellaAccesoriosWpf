<common:Popup
    x:Class="EstrellaAccesoriosWpf.Popups.TotalPopup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:EstrellaAccesoriosWpf.Common"
    xmlns:controls="clr-namespace:EstrellaAccesoriosWpf.Common.Controls"
    xmlns:converters="clr-namespace:EstrellaAccesoriosWpf.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EstrellaAccesoriosWpf.Popups"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:EstrellaAccesoriosWpf.Models"
    d:DataContext="{d:DesignInstance models:Sell}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <common:Popup.Resources>
        <converters:MoneyToDecimalConverter x:Key="MoneyConverter" />
    </common:Popup.Resources>
    <common:Popup.PopupContent>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Label Content="NOMBRE:" />
            <controls:MoneyTextBox
                x:Name="TB_Money"
                Grid.Column="1"
                Text="{Binding TotalEarned, Converter={StaticResource MoneyConverter}, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </common:Popup.PopupContent>
</common:Popup>
